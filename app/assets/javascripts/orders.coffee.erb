$(document).on 'turbolinks:load', (e)->
  $deliveryDate = $('#order_delivery_date')
  $('.datepicker').datepicker
    language: 'ja'
    startDate: $deliveryDate.data('earliest-date')
    endDate: $deliveryDate.data('latest-date')
    datesDisabled:
      $deliveryDate.data('excluded-dates')
