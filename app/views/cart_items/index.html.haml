%h1= t('activerecord.models.cart')

%table.table
  %thead
    %tr
      %th= t('activerecord.models.product')
      %th= t('activerecord.attributes.cart_item.quantity')
      %th

  %tbody
    - @cart_items.each do |item|
      %tr
        %td
          = link_to image_tag(item.product.image.thumb.url), product_path(item.product)
          = link_to item.product.name, product_path(item.product)
        %td
          = form_for item do |f|
            .input-group
              = f.number_field :quantity, class: 'form-control'
              = f.submit 'Update', class: 'btn'
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
