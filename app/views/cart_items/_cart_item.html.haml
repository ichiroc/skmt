%tr
  %td
    .col-md-5
      = product_image_tag(cart_item.image.thumb, width: '100%')
    .col-md-7
      = link_to cart_item.name, product_path(cart_item.product)
  %td
    = number_to_currency(cart_item.price)
  %td
    = form_for cart_item do |f|
      .input-group
        .col-md-6
          = f.number_field :quantity,  class: 'form-control'
        .col-md-6
          = f.submit t('helpers.submit.update'), class: 'btn btn-default'
  %td{align: :right}
    = number_to_currency cart_item.total
  %td= link_to t('helpers.submit.delete'), cart_item, method: :delete, data: { confirm: t('helpers.links.confirm') }, class: 'btn btn-danger'
