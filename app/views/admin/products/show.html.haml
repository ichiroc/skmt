%p#notice= notice

.panel.panel-defaut
  .panel-body
    %p
      %b Name:
      = @product.name
    %p
      %b Description:
      = @product.description
    %p
      %b Price:
      = @product.price
    %p
      %b Status:
      = @product.status
    %p
      %b Sort order:
      = @product.sort_order
    %p
      %b Image:
      = image_tag @product.image.url unless @product.image.blank?

    = link_to t('helpers.links.edit'), edit_admin_product_path(@product), class: 'btn btn-info'
