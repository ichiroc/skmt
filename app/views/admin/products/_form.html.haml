= simple_form_for([ :admin, @product ]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :price
    = f.input :status, as: :radio_buttons, collection: Product.statuses.keys
    = f.input :sort_order
    = f.input :image

  .form-actions
    = f.button :submit
