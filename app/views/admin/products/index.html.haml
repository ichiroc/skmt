%h1 商品管理

%table.table
  %thead
    %tr
      %th= t('activerecord.attributes.product.image')
      %th= t('activerecord.attributes.product.name')
      %th= t('activerecord.attributes.product.description')
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= image_tag product.image.thumb.url unless product.image.thumb.blank?
        %td= product.name
        %td= product.description
        %td
          = link_to 'Show', admin_product_path(product), class: 'btn btn-info'
          = link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-info'
          = link_to 'Destroy', admin_product_path(product), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Product', new_admin_product_path
