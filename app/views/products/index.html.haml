- breadcrumb :root
= search_form_for @q, class: 'form-inline' do |f|
  = f.search_field :name_or_description_cont, class: 'form-control'
  = f.submit class: 'form-control'
= sort_link(@q, :name)
= sort_link(@q, :price)
- @products.each_slice(3).each do |products|
  .row
    - products.each do |product|
      .col-md-4
        .products
          %p= link_to product_image_tag(product.image, width: '100%'), product_path(product)
          %p= link_to product.name, product_path(product)

= paginate @products
