- breadcrumb :order_detail
.panel.panel-default
  .panel-heading
    %h1= t('.order_detail')
  .panel-body
    .row
      .col-md-8
        = render 'order_detail', order: @order
      .col-md-4
        .panel.panel-default
          .panel-body
            .row
              .col-md-5.text-right
                %b= t('.order_date_time')
              .col-md-7
                %p= l @order.created_at
            .row
              .col-md-5.text-right
                %b= t('.destination_name')
              .col-md-7
                %p= @order.destination_name
            .row
              .col-md-5.text-right
                %b= t('.destination_zip_code')
              .col-md-7
                %p= @order.destination_zip_code
            .row
              .col-md-5.text-right
                %b= t('.destination_address')
              .col-md-7
                %p= @order.destination_address
            - if @order.delivery_date
              .row
                .col-md-5.text-right
                  %b= t('.delivery_date')
                .col-md-7
                  %p= l @order.delivery_date
            - unless @order.anytime?
              .row
                .col-md-5.text-right
                  %b= t('.delivery_time_slot')
                .col-md-7
                  %p= @order.delivery_time_slot_i18n
